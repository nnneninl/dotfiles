{
  /* behavior */
  "editor.codeActionsOnSave": { "source.organizeImports": "explicit" },
  "editor.linkedEditing": true,
  "files.trimTrailingWhitespace": true,
  "keyboard.dispatch": "keyCode",

  /* emmet */
  "emmet.excludeLanguages": [],
  "emmet.includeLanguages": { "markdown": "html" },

  /* looks */
  "breadcrumbs.enabled": false,
  "editor.bracketPairColorization.enabled": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "block",
  "editor.fontFamily": "Maple Mono",
  "editor.fontLigatures": false,
  "editor.fontSize": 14,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.rulers": [80, 100, 120],
  "editor.scrollBeyondLastLine": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.tabSize": 4,
  "window.density.editorTabHeight": "compact",
  "window.menuBarVisibility": "toggle",
  "window.zoomLevel": 0.25,
  "workbench.activityBar.location": "top",
  "workbench.colorTheme": "Visual Studio Dark",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 16,
  "workbench.tree.renderIndentGuides": "always",

  /* filetype specific */
  "[markdown]": { "files.trimTrailingWhitespace": false },

  /* formatter */
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "prettier.arrowParens": "always",
  "prettier.bracketSameLine": false,
  "prettier.bracketSpacing": true,
  "prettier.endOfLine": "lf",
  "prettier.jsxSingleQuote": false,
  "prettier.printWidth": 80,
  "prettier.semi": true,
  "prettier.singleQuote": false,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "all",
  "prettier.useTabs": false,

  /* search exclude */
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true
  },

  /* vim */
  "extensions.experimental.affinity": { "vscodevim.vim": 1 },
  "vim.leader": "<SPACE>",
  "vim.highlightedyank.enable": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    // buffer controls
    { "before": ["[", "b"], "commands": [":bprevious"] },
    { "before": ["]", "b"], "commands": [":bnext"] },
    { "before": ["LEADER", "b", "d"], "commands": [":bdelete"] },
    // comment
    { "before": ["g", "c", "c"], "commands": ["editor.action.commentLine"] },
    // diagnostics
    { "before": ["[", "d"], "commands": ["editor.action.marker.prev"] },
    { "before": ["]", "d"], "commands": ["editor.action.marker.next"] },
    // explorer
    {
      "before": ["LEADER", "e"],
      "commands": ["workbench.files.action.focusFilesExplorer"]
    },
    // find
    {
      "before": ["LEADER", "f", "b"],
      "commands": ["workbench.action.showAllEditors"]
    },
    {
      "before": ["LEADER", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["LEADER", "f", "g"],
      "commands": ["workbench.action.findInFiles"]
    },
    // lsp
    {
      "before": ["LEADER", "c", "a"],
      "commands": ["editor.action.codeAction"]
    },
    {
      "before": ["LEADER", "g", "d"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["LEADER", "g", "<S-d>"],
      "commands": ["editor.action.goToDeclaration"]
    },
    {
      "before": ["LEADER", "g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["LEADER", "g", "t"],
      "commands": ["editor.action.goToTypeDefinition"]
    },
    {
      "before": ["LEADER", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<S-k>"],
      "commands": ["editor.action.showHover"]
    },
    // paste
    {
      "before": ["LEADER", "p"],
      "commands": ["editor.action.clipboardPasteAction"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    // comment
    { "before": ["g", "c"], "commands": ["editor.action.commentLine"] },
    // horizontal
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
    { "before": [">"], "commands": ["editor.action.indentLines"] },
    // vertical
    { "before": ["<S-j>"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["<S-k>"], "commands": ["editor.action.moveLinesUpAction"] },
    // yank
    {
      "before": ["LEADER", "y"],
      "commands": ["editor.action.clipboardCopyAction"]
    }
  ],

  /* web development */
  "html.autoClosingTags": true,
  "javascript.autoClosingTags": true,
  "javascript.preferences.renameMatchingJsxTags": true,
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "prompt",
  "typescript.autoClosingTags": true,
  "typescript.preferences.renameMatchingJsxTags": true,
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "prompt",

  /* zen */
  "zenMode.hideLineNumbers": false
}
